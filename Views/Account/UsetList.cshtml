@model IEnumerable<Bhomes_ERP.Models.ApplicationUser>

@{
    ViewData["Title"] = "User List Panel";
    var i = 1;
}

<div class="row">
    <!-- Left Icon/Sidebar -->
    <div class="col-md-1 text-center mt-5">
        <i class="bi bi-person text-primary" style="font-size: 4rem;"></i>
        <h5 class="mt-1 text-secondary">User List</h5>
    </div>

    <!-- Main Content -->
    <div class="col-md-11">
        <div class="container mt-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-folder2-open me-2"></i>User List</h5>
                    <a asp-action="Register" class="btn btn-success btn-sm shadow-sm">
                        <i class="bi bi-plus-lg"></i> Create New
                    </a>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th style="width: 5%;">SN</th>
                                    <th style="width: 10%;">Name</th>
                                    <th style="width: 25%;">Email</th>
                                    <th style="width: 30%;">Description</th>
                                    <th class="text-center" style="width: 30%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                            <td>@Html.DisplayFor(modelItem => item.BranchCode)</td>

                                            <td class="text-center">
                                                <a asp-action="Edit" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-warning me-1" title="Edit">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-info text-white me-1" title="Details">
                                                    <i class="bi bi-info-circle"></i> Details
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id"
                                                   class="btn btn-sm btn-danger" title="Delete"
                                                   onclick="return confirm('Are you sure you want to delete this User?');">
                                                    <i class="bi bi-trash"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            <i class="bi bi-exclamation-circle me-1"></i> No categories found.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer text-muted small">
                    Showing @Model.Count() record(s)
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
