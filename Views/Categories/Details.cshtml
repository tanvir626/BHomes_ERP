@model Bhomes_ERP.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<div class="row">
    <!-- Left Icon -->
    <div class="col-md-2 text-center mt-5">
        <i class="bi bi-info-circle-fill text-info" style="font-size: 4rem;"></i>
        <h5 class="mt-2 text-secondary">Category Details</h5>
    </div>

    <!-- Main Details Card -->
    <div class="col-md-10">
        <div class="container mt-4">
            <div class="card shadow-lg border-0 rounded-3">

                <!-- Card Header -->
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-card-list me-2"></i>
                        Details
                    </h5>
                </div>

                <!-- Card Body -->
                <div class="card-body p-4">
                    <dl class="row mb-4">
                        <dt class="col-sm-3 fw-bold">Category Name</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.CateName)</dd>

                        <dt class="col-sm-3 fw-bold">Description</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>
                    </dl>

                    <!-- Action Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                            <i class="bi bi-pencil-square me-1"></i> Edit
                        </a>
                    </div>
                </div>

                <!-- Card Footer -->
                <div class="card-footer text-muted small">
                    Last updated details of this category.
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">
