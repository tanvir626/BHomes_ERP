@model IEnumerable<Bhomes_ERP.Models.Category>

@{
    ViewData["Title"] = "Categories";
    var i = 1;
}

<div class="row">
    <!-- Left Icon/Sidebar -->
    <div class="col-md-2 text-center mt-5">
        @* <i class="bi bi-list-columns-reverse text-primary" style="font-size: 4rem;"></i> *@
        <i class="fas accordion-item" style="font-size: 4rem;"></i>
        <h5 class="mt-2 text-secondary">Categories</h5>
    </div>

    <!-- Main Content -->
    <div class="col-md-10">
        <div class="container mt-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-folder2-open me-2"></i>Category List</h5>
                    <a asp-action="Create" class="btn btn-success btn-sm shadow-sm">
                        <i class="bi bi-plus-lg"></i> Create New
                    </a>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover align-middle mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th style="width: 5%;">SN</th>
                                    <th style="width: 25%;">Category Name</th>
                                    <th style="width: 50%;">Description</th>
                                    <th class="text-center" style="width: 20%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@Html.DisplayFor(modelItem => item.CateName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Description)</td>                                          


                                             <td class="text-center">
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm me-1">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1 text-white">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </td>


                                    

                                        </tr>
                                        i++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center text-muted py-4">
                                            <i class="bi bi-exclamation-circle me-1"></i> No categories found.
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

                <div class="card-footer text-muted small">
                    Showing @Model.Count() record(s)
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap Icons -->
