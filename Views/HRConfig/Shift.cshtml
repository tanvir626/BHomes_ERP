@model Bhomes_ERP.Models.VM_Model.VM_Shift;
@{
    ViewData["Title"] = "Shift";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card" style="overflow:auto;">
    <div class="card-header">
        <div class="row">
            <div class="col-6 text-start">
                <h2>Shift</h2>
            </div>
            <div class="col-6 text-end">
                <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#exampleModal">
                    Add Shift
                </button>
            </div>
        </div>

    </div>
    <div class="card-body">
        <div class="row">
            <div class="col">
                <table class="table table-striped border border-2" id="myTable">
                    <thead class="border border-2">
                        <tr>
                            <th scope="col" class="text-center">Sl</th>
                            <th scope="col" class="text-center">ShiftID</th>
                            <th scope="col" class="text-center">ShiftName</th>
                            <th scope="col" class="text-center">StartTime</th>
                            <th scope="col" class="text-center">EndTime</th>
                            <th scope="col" class="text-center">LateAllowed</th>
                            <th scope="col" class="text-center">Weekend1</th>
                            <th scope="col" class="text-center">Status</th>
                            <th scope="col" class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var sl = 1;
                        }
                        @foreach (var d in ViewBag.Data)
                        {
                            <tr>
                                <td class="text-center">@sl</td>
                                <td class="text-center">@d.ShiftID</td>
                                <td class="text-center">@d.ShiftName</td>
                                <td class="text-center">@d.StartTime</td>
                                <td class="text-center">@d.EndTime</td>
                                <td class="text-center">@d.LateAllowed</td>
                                <td class="text-center">@d.Weekend1</td>
                                <td class="text-center">@d.Status</td>
                                <td class="text-center">
                                    <button class="btn btn-sm btn-primary" onclick="return ShowindividualRow('HR_Shift','ShiftID',@d.ShiftID)">Edit</button>
                                    <button class="btn btn-sm btn-danger" onclick="return Delete('HR_Shift','ShiftID',@d.ShiftID)">Delete</button>
                                </td>
                            </tr>
                            sl++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!--Add Department Modal-->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <!-- optional: modal-lg for wider form -->
            <div class="modal-content">
                <form asp-action="Create_Shift"
                      asp-controller="HRConfig"
                      class="ajax-form"
                      method="post"
                      id="pageForm"
                      data-action="@Url.Action("Create_Shift", "HRConfig")">

                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Add Shift</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ShiftName" class="form-label"></label>
                                <input asp-for="ShiftName" class="form-control" />
                                <span asp-validation-for="ShiftName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Weekend1" class="form-label"></label>
                                <select asp-for="Weekend1" class="form-control">
                                    <option value="">-- Select Day --</option>
                                    @foreach (var day in ViewBag.Day)
                                    {
                                        <option value="@day">@day</option>
                                    }
                                </select>
                                <span asp-validation-for="Weekend1" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="StartTime" class="form-label"></label>
                                <input asp-for="StartTime" type="time" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="EndTime" class="form-label"></label>
                                <input asp-for="EndTime" type="time" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="LateAllowed" class="form-label"></label>
                                <input asp-for="LateAllowed" type="time" class="form-control" />
                                <span asp-validation-for="LateAllowed" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-plus-circle"></i> Create
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
    <!--End Department Modal-->
    <!--Edit Department Modal-->
    <div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="EditModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Update_Shift" method="post" id="EditDepartmentForm">
                    <div class="modal-header">
                        <h5 class="modal-title" id="EditModalLabel">Edit Shift</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                      
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="ShiftID" class="form-label"></label>
                                <input asp-for="ShiftID" id="EditShiftID" type="text" class="form-control" readonly />
                                <span asp-validation-for="ShiftID" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ShiftName" class="form-label"></label>
                                <input asp-for="ShiftName" id="EditShiftName" class="form-control" />
                                <span asp-validation-for="ShiftName" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Weekend1" class="form-label"></label>
                                <select asp-for="Weekend1" class="form-control" id="EditWeekend1">
                                    <option value="">-- Select Day --</option>
                                    @foreach (var day in ViewBag.Day)
                                    {
                                        <option value="@day">@day</option>
                                    }
                                </select>
                                <span asp-validation-for="Weekend1" class="text-danger"></span>
                            </div>
                          
                        </div>
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="StartTime" class="form-label"></label>
                                <input asp-for="StartTime" id="EditStartTime" type="time" class="form-control" />
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="EndTime" class="form-label"></label>
                                <input asp-for="EndTime" type="time" id="EditEndTime" class="form-control" />
                                <span asp-validation-for="EndTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="LateAllowed" class="form-label"></label>
                                <input asp-for="LateAllowed" id="EditLateAllowed" type="time" class="form-control" />
                                <span asp-validation-for="LateAllowed" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="offset-9 col-md-6 d-flex align-items-center ">
                                <div class="form-check mt-4 text-end">
                                    <input asp-for="Status" id="EditStatus" class="form-check-input" type="checkbox" />
                                    <label for="EditDeptStatus" class="form-check-label fw-semibold">Active</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-warning"> <i class="bi bi-plus-circle"></i> Update </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!--Edit Page Modal-->
@section CustomJS {
        <script>
            $(document).ready(function () {

                // UpdatePage
                $('#EditDepartmentForm').on("submit", function (e) {
                    e.preventDefault(); // prevent page reload
                    var form = $(this);

                    $.ajax({
                        url: form.attr('action'), // UpdatePage action
                        type: 'POST',
                        data: form.serialize(),   // send all form data
                        success: function (response) {
                            if (response.info) {
                                $('#EditModal').modal('hide');
                                toastr.success("Department updated successfully!");
                                window.location.reload();
                            } else {
                                $('#EditModal').modal('hide');
                                toastr.error(response.message || "Something went wrong!");
                            }
                        },
                        error: function (xhr) {
                            toastr.error("Error occurred: " + xhr.responseText);
                        }
                    });
                });

            });

             // ShowIndividualRow
            function ShowindividualRow(TableName, ColName, id) {
                if (!confirm("Are you sure you want to edit this row?"))
                    return;

                $("#loadingSpinner").show(); // show loader
                $('#EditModal').modal('show');
                $.ajax({
                    url: '/Crud/ShowIndivisualDeptRow/',
                    type: "GET",
                    data: { TableName: TableName, ColName: ColName, id: id },
                    success: function (response) {
                        $("#loadingSpinner").hide();

                        if (response.row && response.row.length > 0) {
                            var row = response.row[0];
                            $('#EditModal').modal('show');
                            $('#EditShiftID').val(row.ShiftID);
                            $('#EditShiftName').val(row.ShiftName);                            
                            $('#EditStartTime').val(row.StartTime);
                            $('#EditEndTime').val(row.EndTime);
                            $('#EditLateAllowed').val(row.LateAllowed);
                            $('#EditWeekend1').val(row.Weekend1);
                            $('#EditStatus').prop('checked', row.Status === 'Y' || row.Status === "Y" || row.Status === 1 || row.Status === "1");

                        } else {
                            alert("No data found!");
                        }
                    },
                    error: function (xhr) {
                        $("#loadingSpinner").hide();
                        alert("Error occurred: " + xhr.responseText);
                    }
                });
            }
        </script>
}
